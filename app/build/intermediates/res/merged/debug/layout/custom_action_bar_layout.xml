<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/buttonTopLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_undo_black_24dp"
            android:textColor="@color/colorBlack"
            android:backgroundTint="@color/colorDarkGrey"
            android:layout_weight="1"
            android:text="@string/deleteLastMarker" />

        <Button
            android:id="@+id/buttonTopCenter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:backgroundTint="@color/colorDarkGrey"
            android:layout_weight="1"
            android:text="@string/firebase" />

        <Button
            android:id="@+id/start_stop_navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorDarkGrey"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_near_me_black_24dp"
            android:text="@string/navigationModeToggleStartNav" />

    </LinearLayout>

</RelativeLayout>